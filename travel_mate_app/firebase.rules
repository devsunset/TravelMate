rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for chat rooms
    match /chats/{chatId} {
      // Allow read/write if the user is a participant in the chat
      allow read, write: if request.auth != null && (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.participants[0] || request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.participants[1]);

      // Rules for messages within a chat room
      match /messages/{messageId} {
        // Allow read/write if the user is a participant in the chat
        allow read, write: if request.auth != null && (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.participants[0] || request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.participants[1]);

        // Additionally, ensure senderId matches authenticated user's UID when writing a message
        allow create: if request.auth.uid == request.resource.data.senderId;
      }
    }
    // Other Firestore rules can go here
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to their own profile_images folder
    // and allow public read access for all profile images.
    match /users/{userId}/profile_images/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read;
    }

    // Allow authenticated users to upload to a 'posts' folder (per user or generic)
    // and allow public read access for all post images.
    match /posts/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read;
    }

    // Allow authenticated users to upload to an 'itineraries' folder (per user or generic)
    // and allow public read access for all itinerary images.
    match /itineraries/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read;
    }

    // Other storage rules can go here
  }
}
